NODE_ENV=development
PORT=5000
SOCKET_PORT=5001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=foodcourt_pos
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=30m

# API Configuration
API_URL=http://localhost:5000
API_PREFIX=/api

# Payment Gateway (Midtrans Example)
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Timezone
TZ=Asia/Jakarta

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Revenue Share Default (in percentage)
DEFAULT_TENANT_SHARE=97
DEFAULT_FOODCOURT_SHARE=2
DEFAULT_DEVELOPER_SHARE=1

# QR Configuration
QR_EXPIRY_MINUTES=120

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
